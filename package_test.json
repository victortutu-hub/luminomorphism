{
  "name": "luminomorphism",
  "version": "1.1.4",
  "description": "Luminomorphic UI Component Library",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild src/*.js --bundle --minify --outdir=dist",
    "build:css": "csso src/*.css --output dist",
    "watch": "chokidar \"src/**/*\" -c \"npm run build\""
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.20.0",
    "csso": "^5.0.5"
  }
}